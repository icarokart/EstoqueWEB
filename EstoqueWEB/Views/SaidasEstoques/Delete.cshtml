    ViewData["Title"] = "Saidas Estoque - Excluir Registro";
}

<h1>Excluir Registro</h1>

<h4 style="color:red"><i>Tem certeza que deseja excluir este registro?</i></h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DtSaida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DtSaida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QtdSaida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdSaida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoVendaUn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecoVendaUn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdProdutoNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProdutoNavigation.IdProduto)
        </dd>
